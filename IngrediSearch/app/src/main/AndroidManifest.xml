<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.erbe.ingredisearch">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IngrediSearch">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/main_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SearchActivity"
            android:label="@string/search_title"/>
        <activity
            android:name=".ui.SearchResultsActivity"
            android:label="@string/results_title"/>
        <activity
            android:name=".ui.FavoritesActivity"
            android:label="@string/favorites_title"/>
        <activity
            android:name=".ui.RecipeActivity"
            android:label="@string/recipe_title"/>
    </application>

</manifest>