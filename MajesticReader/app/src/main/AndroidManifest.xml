<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.erbe.majesticreader">

    <application
        android:name=".framework.MajesticReaderApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MajesticReader">

        <activity
            android:name=".presentation.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.MajesticReader.NoActionBar">
        </activity>

        <!-- Splash Activity -->
        <activity android:name=".presentation.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>